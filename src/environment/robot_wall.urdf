<?xml version="1.0"?>
<robot name="robot">
    <link name="anchor">
        <visual>
            <geometry>
                <anchor_module length="0.5" />
            </geometry>
        </visual>
        <!-- The following line specifies if the anchor_module should be able to rotate.
             Adding/Removing the line will enable/disable the rotation. -->
        <rotation lower_bound="0" upper_bound="360" />
    </link>
    <!-- A 'complex' module -->
    <!-- <link name="MODULE_1">
        <visual>
            <geometry>
                <complex_module length="4.0"/>
            </geometry>
        </visual>
        <tilt lower_bound="0" upper_bound="90" />
        <rotation lower_bound="0" upper_bound="180" />
    </link> -->
    <!-- A 'tilting' module -->
    <link name="MODULE_1">
        <visual>
            <geometry>
                <tilting_module length="3"/>
            </geometry>
        </visual>
        <tilt lower_bound="0" upper_bound="90" />
    </link>
    <link name="MODULE_2">
        <visual>
            <geometry>
                <complex_module length="3"/>
            </geometry>
        </visual>
        <tilt lower_bound="0" upper_bound="90" />
        <rotation lower_bound="0" upper_bound="180" />
    </link>
    <link name="MODULE_3">
        <visual>
            <geometry>
                <tilting_module length="1.5"/>
            </geometry>
        </visual>
        <tilt lower_bound="0" upper_bound="90" />
    </link>
    <link name="MODULE_4">
        <visual>
            <geometry>
                <tilting_module length="1.5"/>
            </geometry>
        </visual>
        <tilt lower_bound="0" upper_bound="90" />
    </link>
    <!-- A 'rotating' module -->
    <!-- <link name="MODULE_3">
        <visual>
            <geometry>
                <rotating_module length="1.0"/>
            </geometry>
        </visual>
        <rotation lower_bound="0" upper_bound="180" />
    </link> -->

    <joint name="MODULE_1_JOINT" type="revolute">
        <parent link="anchor"/>
        <child link="MODULE_1"/>
    </joint>

    <joint name="MODULE_2_JOINT" type="revolute">
        <parent link="MODULE_1"/>
        <child link="MODULE_2"/>
    </joint>

    <joint name="MODULE_3_JOINT" type="revolute">
        <parent link="MODULE_2"/>
        <child link="MODULE_3"/>
    </joint>

    <joint name="MODULE_4_JOINT" type="revolute">
        <parent link="MODULE_3"/>
        <child link="MODULE_4"/>
    </joint>
</robot>