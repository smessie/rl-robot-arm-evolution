<?xml version="1.0"?>
<robot name="robot">
    <link name="anchor">
        <visual>
            <geometry>
                <anchor_module length="1" />
            </geometry>
        </visual>
        <!-- The following line specifies if the anchor_module should be able to rotate.
             Adding/Removing the line will enable/disable the rotation. -->
        <rotation lower_bound="0" upper_bound="360" />
    </link>
    <!-- A 'tilting' module -->
    <link name="MODULE_1_TILT">
        <visual>
            <geometry>
                <tilting_module length="2.5"/>
            </geometry>
        </visual>
        <tilt lower_bound="0" upper_bound="150" />
    </link>
    <!-- A 'complex' module -->
    <link name="MODULE_2_TILT_ROTATE">
        <visual>
            <geometry>
                <complex_module length="2.5"/>
            </geometry>
        </visual>
        <tilt lower_bound="0" upper_bound="150" />
        <rotation lower_bound="0" upper_bound="360" />
    </link>
    <link name="MODULE_3_TILT">
        <visual>
            <geometry>
                <tilting_module length="1.5"/>
            </geometry>
        </visual>
        <tilt lower_bound="0" upper_bound="150" />
    </link>
    <!-- A 'rotating' module -->
    <!-- <link name="MODULE_3">
        <visual>
            <geometry>
                <rotating_module length="1.0"/>
            </geometry>
        </visual>
        <rotation lower_bound="0" upper_bound="150" />
    </link> -->

    <joint name="MODULE_1_JOINT" type="revolute">
        <parent link="anchor"/>
        <child link="MODULE_1_TILT"/>
    </joint>

    <joint name="MODULE_2_JOINT" type="revolute">
        <parent link="MODULE_1_TILT"/>
        <child link="MODULE_2_TILT_ROTATE"/>
    </joint>

    <joint name="MODULE_3_JOINT" type="revolute">
        <parent link="MODULE_2_TILT_ROTATE"/>
        <child link="MODULE_3_TILT"/>
    </joint>
</robot>
