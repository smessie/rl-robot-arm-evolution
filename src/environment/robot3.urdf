<?xml version="1.0"?>
<robot name="robot">
    <link name="anchor">
        <visual>
            <geometry>
                <anchor_module length="1" />
            </geometry>
        </visual>
        <!-- The following line specifies if the anchor_module should be able to rotate.
             Adding/Removing the line will enable/disable the rotation. -->
        <rotation lower_bound="0" upper_bound="360" />
    </link>
    <!-- A 'tilting' module -->
    <link name="MODULE_1_TILT">
        <visual>
            <geometry>
                <tilting_module length="7"/>
            </geometry>
        </visual>
        <tilt lower_bound="-120" upper_bound="120" />
    </link>
    <!-- A 'tilting' module -->
    <link name="MODULE_2_TILT">
        <visual>
            <geometry>
                <tilting_module length="2"/>
            </geometry>
        </visual>
        <tilt lower_bound="-120" upper_bound="120" />
    </link>


    <joint name="MODULE_1_JOINT" type="revolute">
        <parent link="anchor"/>
        <child link="MODULE_1_TILT"/>
    </joint>

    <joint name="MODULE_2_JOINT" type="revolute">
        <parent link="MODULE_1_TILT"/>
        <child link="MODULE_2_TILT"/>
    </joint>
</robot>
