<?xml version="1.0"?>
<robot name="robot">
    <link name="anchor">
        <visual>
            <geometry>
                <anchor_module/>
            </geometry>
        </visual>
    </link>
    <link name="MODULE_1">
        <visual>
            <geometry>
                <base_module length="0.5"/>
            </geometry>
        </visual>
    </link>
    <link name="MODULE_2">
        <visual>
            <geometry>
                <base_module length="1.5"/>
            </geometry>
        </visual>
    </link>
    <link name="MODULE_3">
        <visual>
            <geometry>
                <base_module length="1.0"/>
            </geometry>
        </visual>
    </link>

    <joint name="MODULE_1_JOINT" type="revolute">
        <parent link="anchor"/>
        <child link="MODULE_1"/>
    </joint>

    <joint name="MODULE_2_JOINT" type="revolute">
        <parent link="MODULE_1"/>
        <child link="MODULE_2"/>
    </joint>

    <joint name="MODULE_3_JOINT" type="revolute">
        <parent link="MODULE_2"/>
        <child link="MODULE_3"/>
    </joint>
</robot>